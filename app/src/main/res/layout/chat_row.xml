<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bubble_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/otherprofilepic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/imageClipper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_image_background">

            <ImageView
                android:id="@+id/imagefile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:maxWidth="150dp"
                android:maxHeight="200dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:adjustViewBounds="true"/>
        </LinearLayout>

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:maxEms="12"
            android:text="Hi! new message Hi! new message Hi! new message Hi! new message"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <ImageView
        android:id="@+id/messagestatus"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="3dp"
        android:visibility="gone"/>

</LinearLayout>